<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".attend.AttendActivity"
    android:padding="10dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--상단메뉴바-->
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back_c" />
    </RelativeLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_radius2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_margin="5dp"
                style="@style/main_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 근무 상황"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_radius2"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                style="@style/main_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="휴가 및 연차 신청관리" />

            <Button
                android:layout_gravity="center"
                android:id="@+id/apply"
                android:backgroundTint="@color/sub_color"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color"
                android:text="신청"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sub_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <!--신청현황1-->
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/main_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="승인 완료"              />

                    <TextView
                        style="@style/sub_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/blue" />
                </LinearLayout>
                <!--신청현황2-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/main_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="요청 중"
                        />

                    <TextView
                        style="@style/sub_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/green" />
                </LinearLayout>
                <!--신청현황3-->
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/main_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="반려"
                        />

                    <TextView
                        style="@style/sub_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/red" />
                </LinearLayout>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recv_attend_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


</LinearLayout>
</androidx.core.widget.NestedScrollView>