<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_radius2"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/ll_each_schedule">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_sche_title"
        android:layout_margin="10dp"
        android:text="행사이름"
        style="@style/main_size"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_complete"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:textColor="@color/red"
        android:text="완료"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
    <TextView
        android:id="@+id/tv_sche_content"
        android:layout_margin="10dp"
        android:textColor="@color/main_color"
        android:text="간략한 행사내용"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_period"
        android:layout_margin="10dp"
        android:layout_gravity="end"
        android:text="2022/01/03 ~ 2022/12/12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>