<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".code.CodeInfoFragment"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_c" />

        <TextView
            android:id="@+id/tv_menu_title"
            style="@style/main_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="코드 상세" />

    </RelativeLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            android:textAlignment="center"
            style="@style/main_size"
            android:text="상위 코드"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/main_size"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/tv_top_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            style="@style/main_size"
            android:text="하위 코드"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/main_size"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/tv_bottom_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            style="@style/main_size"
            android:text="코드 밸류 1"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/edt_code_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_margin="10dp"
        style="@style/main_size"
        android:text="코드 밸류 2"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:id="@+id/edt_code_value2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            style="@style/main_size"
            android:text="생성일"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            style="@style/main_size"
            android:layout_weight="1"
            android:id="@+id/tv_create_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            style="@style/main_size"
            android:text="생성한 사원"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            style="@style/main_size"
            android:layout_weight="1"
            android:id="@+id/tv_creater"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btn_edit"
        style="@style/sub_size"
        android:backgroundTint="@color/p_color"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:layout_gravity="center"
        android:text="수정"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_delete"
        style="@style/sub_size"
        android:backgroundTint="#BC2C2C"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:layout_gravity="center"
        android:text="삭제"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>



</LinearLayout>


</LinearLayout>