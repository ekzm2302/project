<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employee.EmpUpdateFragment"
    android:orientation="vertical">


    <!--최상단-->
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_c" />

        <TextView
            style="@style/main_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="사원 정보 변경" />
    </RelativeLayout>
<ScrollView
    android:id="@+id/sv_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_emp_profile"
            android:layout_gravity="center"
            android:src="@drawable/img_unknown"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <!--신규사원폼-->
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:text="사번"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/main_size"
                android:layout_margin="10dp"
                android:id="@+id/tv_emp_no"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:text="성명"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="text"
                android:maxLines="1"
                android:layout_margin="10dp"
                android:id="@+id/edt_emp_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_birth"
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:text="생년월일"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/main_size"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/tv_birth"
                android:text="클릭하여 입력하세요."
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_gender"
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/main_size"
                android:layout_margin="10dp"
                android:text="성별"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_male"
                android:layout_margin="10dp"
                android:checked="true"
                android:text="남"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_female"
                android:layout_margin="10dp"
                android:text="여"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:text="이메일"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="text"
                android:maxLines="1"
                android:hint="ex@example.com"
                android:layout_margin="10dp"
                android:id="@+id/edt_emp_email"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:text="연락처"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="number"
                android:maxLines="1"
                android:hint="ex) 01012345678"
                android:layout_margin="10dp"
                android:id="@+id/edt_emp_phone"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:text="지점"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <org.angmarch.views.NiceSpinner
                android:layout_margin="10dp"
                android:id="@+id/spn_branch"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:text="부서"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <org.angmarch.views.NiceSpinner
                android:layout_margin="10dp"
                android:id="@+id/spn_dept"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:text="직책"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <org.angmarch.views.NiceSpinner
                android:layout_margin="10dp"
                android:id="@+id/spn_rank"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10dp"
                    style="@style/main_size"
                    android:text="주소"
                    android:textAlignment="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:hint="클릭하여 주소 검색"
                    style="@style/main_size"
                    android:layout_margin="10dp"
                    android:id="@+id/edt_address"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <EditText
                android:id="@+id/edt_address_detail"
                android:layout_margin="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:hint="상세주소를 입력하세요."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:text="연봉"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="number"
                android:maxLines="1"
                android:layout_margin="10dp"
                android:id="@+id/edt_salary"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/radio_admin"
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/main_size"
                android:layout_margin="10dp"
                android:text="구분"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_emp"
                android:layout_margin="10dp"
                android:checked="true"
                android:text="일반"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_l1"
                android:layout_margin="10dp"
                android:text="관리자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:visibility="gone"
                android:id="@+id/radio_out"
                android:layout_margin="10dp"
                android:text="퇴사자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>

        <Button
            android:layout_margin="10dp"
            android:backgroundTint="@color/p_color"
            android:layout_gravity="center"
            android:id="@+id/btn_emp_update"
            android:text="수정 완료"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>