<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".calendar.CalendarFragment"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/back" />

        <TextView
            style="@style/main_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="일정 관리" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_margin="10dp"
        style="@style/main_size"
        android:textStyle="bold"
        android:id="@+id/tv_calendarIntro"
        android:text="사용자님과 관련된 일정"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@drawable/item_radius2"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:text="회사 일정"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="#595959"
                    android:layout_width="100dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/tv_countComp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:text="부서 일정"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="#595959"
                    android:layout_width="100dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/tv_countDept"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:text="개인 일정"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="#595959"
                    android:layout_width="100dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/tv_countPersonal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    <!-- 여기다가 각 일정 개수를 표현 -->

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                style="@style/main_size"
                android:textStyle="bold"
                android:text="회사 일정"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_add_company_schedule"
                android:textColor="#69B4FF"
                android:layout_margin="10dp"
                style="@style/sub_size"
                android:textStyle="bold"
                android:text="일정 추가"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:background="@drawable/item_radius2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/ll_company_schedule">

            <TextView
                android:gravity="center"
                android:id="@+id/tv_sche_content"
                android:layout_margin="10dp"
                android:text="예정된 회사 일정이 없습니다."
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/recv_compSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:layout_margin="10dp"
        android:id="@+id/calendarview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mcv_selectionMode="range"/>
-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:layout_margin="10dp"
        style="@style/main_size"
        android:textStyle="bold"
        android:id="@+id/tv_dept_schedule"
        android:text="부서 일정"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_add_department_schedule"
            android:textColor="#69B4FF"
            android:layout_margin="10dp"
            style="@style/sub_size"
            android:textStyle="bold"
            android:text="일정 추가"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="@drawable/item_radius2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/ll_department_schedule">
            <TextView
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="예정된 부서 일정이 없습니다."
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/recv_deptSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:layout_margin="10dp"
        style="@style/main_size"
        android:textStyle="bold"
        android:text="개인 일정"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
<TextView
    android:id="@+id/tv_add_personal_schedule"
    android:textColor="#69B4FF"
    android:layout_margin="10dp"
    style="@style/sub_size"
    android:textStyle="bold"
    android:text="일정 추가"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/ll_personal_schedule">

            <TextView
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="예정된 개인 일정이 없습니다."
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/recv_personalSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>