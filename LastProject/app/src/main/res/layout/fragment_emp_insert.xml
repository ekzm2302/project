<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employee.EmpInsertFragment"
    android:orientation="vertical">
    <!--최상단-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/back" />

        <TextView
            style="@style/main_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="신규 사원 추가" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:src="@drawable/img_unknown"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <!--신규사원폼-->
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            style="@style/main_size"
            android:text="성명"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/edt_emp_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_gender"
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/main_size"
            android:layout_margin="10dp"
            android:text="성별"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_male"
            android:layout_margin="10dp"
            android:checked="true"
            android:text="남"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_female"
            android:layout_margin="10dp"
            android:text="여"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            style="@style/main_size"
            android:text="이메일"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/edt_emp_email"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            style="@style/main_size"
            android:text="연락처"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/edt_emp_phone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_emp_insert"
        android:text="저장"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>