<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ll_each_emp">

    <ImageView
        android:id="@+id/iv_emp_profile"
        android:layout_margin="10dp"
        android:src="@drawable/user_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_emp_name"
            style="@style/sub_size"
        android:layout_margin="10dp"
        android:text="사원명"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_emp_branch_dep_rank"
            style="@style/sub_size"
        android:text="지점 / 부서 / 직급"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_margin="10dp"
        style="@style/sub_size"
        android:id="@+id/tv_nowStatus"
        android:layout_gravity="center"
        android:text="현재 근무 상태"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>