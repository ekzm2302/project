<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ea.WriteEaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/sub_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기안 작성" />
        <TextView
            android:layout_marginBottom="30dp"
            android:id="@+id/tv_main"
            style="@style/main_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="기안명"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="기안양식"
                android:textColor="@color/light_color"
                android:layout_weight="1"
               android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_form"
                android:text="기안양식"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="공개여부"
                android:textColor="@color/light_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RadioGroup
            android:layout_gravity="center"
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:orientation="horizontal">
            <RadioButton
                android:checked="true"
                android:id="@+id/radio_open"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginRight="10dp"
                android:text="공개" />

            <RadioButton
                android:id="@+id/radio_depart"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginRight="10dp"
                android:text="부서공개" />

            <RadioButton
                android:id="@+id/radio_private"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="비공개" />
        </RadioGroup>

        <TextView
            android:layout_marginTop="15dp"
            android:text="기안부서"
            android:textColor="@color/light_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_gravity="center"
            android:id="@+id/spinner_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginBottom="15dp"
            android:background="#7A7979"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:text="결재선"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sign_check"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:text="결제선이 비어있습니다. 결재선을 추가해주세요."
            android:layout_width="140dp"
            android:layout_height="100dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recv_sgin_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_sign_add"
            android:backgroundTint="@color/main_color"
            android:text="결제선 추가"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>